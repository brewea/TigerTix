@model TigerTix.Web.Models.Login
<link rel="stylesheet" href="~/css/site.css" />
@{
    ViewData["Title"] = "Login";
}

<h1>User Login</h1>
<div id="login">
    <h3 class="text-center text-white pt-5">Login form</h3>
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" class="form" action="../Views/Event/Index.cshtml" method="post">
                        <h3 class="text-center text-info-orange">Login</h3>
                        <div class="form-group">
                            <label for="username" class="text-info-orange">Username:</label><br>
                            <input type="text" name="username" id="username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-info-orange">Password:</label><br>
                            <input type="text" name="password" id="password" class="form-control">
                        </div>
                        <div class="form-group text-info-orange">
                            <label for="remember-me" class="text-info-orange"><span>Remember me</span> <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
                            <input type="submit" name="submit" class="btn btn-info-orange btn-md " value="Submit">
                        </div>
                        <div id="register-link" class="text-right">
                            <a href="/../Views/User/Create.cshtml" class="text-info-orange">Register here</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

