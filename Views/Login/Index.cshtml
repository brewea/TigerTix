@model LoginViewModel

@{
    ViewData["Title"] = "Login Page";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
</head>
    <body>
        <h1>User Login</h1>

        <form method="post">

            <label>Username:</label>
            <br />
            <input type="text" name="username" />
            <br />
            <label>Password:</label>
            <br />
            <input type="text" name="password" />
            <br />
            <br />
            <input type="submit" value="Login" />
        </form>

    </body>
</html>